    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DateTimeSettingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/date_time_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/date_time_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_date_and_time"
                android:layout_centerHorizontal="true"/>

            <!-- Input one -->
            <RelativeLayout
                android:id="@+id/time_1_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/date_time_description_text"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/time_1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:text="1."/>

                <!-- Input to add time in 24 hours format -->
                <EditText
                    android:id="@+id/time_edit_text"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/time_1_text"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="16dp"
                    android:hint="@string/set_time"
                    android:inputType="time"
                    android:timePickerMode="spinner"
                    app:errorEnabled="true" />

                <!-- Slider -->
                <SeekBar
                    android:id="@+id/day_slider"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/time_edit_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="32dp"
                    android:min="0"
                    android:max="1"
                    android:progress="0"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/set_day_text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/day_slider"

                    android:textSize="14dp"
                    android:text="@string/set_day"/>

                <Button
                    android:id="@+id/time_1_submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/day_slider"
                    android:layout_marginStart="10dp"
                    android:text="@string/change" />

                <Button
                    android:id="@+id/time_1_delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/time_1_submit_button"
                    android:layout_marginStart="10dp"
                    android:text="@string/delete_button" />

            </RelativeLayout>
