<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DateTimeSettingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/date_time_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/date_time_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/set_date_and_time" />

            <!-- Input one -->
            <RelativeLayout
                android:id="@+id/time_1_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_time_description_text"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/time_1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:text="1."
                    android:textSize="16sp" />

                <!-- Input to add time in 24 hours format -->

                <!-- Slider -->
                <TextView
                    android:id="@+id/time_1_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="22dp"
                    android:layout_toRightOf="@+id/time_1_text"
                    android:clickable="true"
                    android:hint="@string/set_format"
                    android:textSize="20sp"
                    android:timePickerMode="spinner"
                    app:errorEnabled="true" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/day_slider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/time_1_edit_text"
                    android:checked="false"
                    android:textOff="@string/every_day"
                    android:textOn="@string/day_after"
                    app:showText="true" />

                <Button
                    android:id="@+id/time_1_submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/day_slider"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="62dp"
                    android:text="@string/sent_button" />

                <Button
                    android:id="@+id/time_1_delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/day_slider"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="28dp"
                    android:layout_toRightOf="@+id/time_1_submit_button"
                    android:backgroundTint="@color/bottom_nav_color"
                    android:text="@string/delete_button" />

            </RelativeLayout>
            <!-- Input two -->
