<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PhoneNumberSettingFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/phone_number_input_layout"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/phone_number_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_numbers"/>
            <RelativeLayout
                android:id="@+id/number_1_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_number_description_text"
                android:padding="10dp">
                <TextView
                    android:id="@+id/number_1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:text="1."/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/number_1_text_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/number_1_text"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/number_1_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/number_1_record_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mic"
                    android:layout_toEndOf="@id/number_1_submit_button"/>
                <Button
                    android:id="@+id/number_1_submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/number_1_text_input_layout"

                    android:text="@string/change" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/number_2_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_1_input_layout"
                android:padding="10dp">
                <TextView
                    android:id="@+id/number_2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:text="2."/>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/number_2_text_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/number_2_text"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/number_2_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/number_2_record_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mic"
                    android:layout_toEndOf="@id/number_2_submit_button"/>
                <Button
                    android:id="@+id/number_2_submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change"
                    android:layout_toEndOf="@id/number_2_text_input_layout"
                    android:layout_margin="10dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/number_3_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_2_input_layout"
                android:padding="10dp">
                <TextView
                    android:id="@+id/number_3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:text="3."/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/number_3_text_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/number_3_text"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/number_3_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/number_3_submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change"
                    android:layout_toEndOf="@id/number_3_text_input_layout"
                    android:layout_margin="10dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/number_4_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_3_input_layout"
                android:padding="10dp">
                <TextView
                    android:id="@+id/number_4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:text="4."/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/number_4_text_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/number_4_text"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/number_4_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/number_4_submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change"
                    android:layout_toEndOf="@id/number_4_text_input_layout"
                    android:layout_margin="10dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/number_5_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_4_input_layout"
                android:padding="10dp">

                <TextView
                    android:id="@+id/number_5_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:text="5."/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/number_5_text_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/number_5_text"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/number_5_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/number_5_submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change"
                    android:layout_toEndOf="@id/number_5_text_input_layout"
                    android:layout_margin="10dp" />

            </RelativeLayout>
        </RelativeLayout>
        <ImageButton
            android:id="@+id/phone_number_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            />

    </RelativeLayout>
</layout>
